@page
@model Web.Pages.Categorias.CategoriasModel
@{
}
<head>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />

    <link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/css/modales.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/tablas.css" rel="stylesheet" />
</head>

<body>
    <h1 class="page-title">Gestión de Categorias</h1>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <button class="btn btn-primary rounded-pill" data-bs-toggle="modal" data-bs-target="#agregarCategoriaModal">
            <i class="bi bi-plus-lg"></i> Agregar Categoria
        </button>
    </div>
    <div class="table-responsive">
        <table id="tablaCategorias" class="table table-striped table-bordered rounded-table text-center">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Nombre del padre</th>
                    <th>Descripción</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <tr data-id="1">
                    <td>1</td>
                    <td>Electrónica</td>
                    <td>Es categoría principal</td>
                    <td>Productos electrónicos y gadgets</td>
                    <td>
                        <button class="btn btn-success btn-sm toggle-estado btn-rounded" data-id="1" data-estado="Activo">
                            Activo
                        </button>
                    </td>
                    <td>
                        <div class="d-flex justify-content-center gap-2">
                            <button data-bs-toggle="modal" data-bs-target="#agregarCategoriaModal" class="btn btn-primary btn-rounded" title="Editar">
                                <i class="bi bi-pencil-square"></i>
                            </button>
                            <button class="btn btn-danger btn-rounded" title="Eliminar">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </td>
                </tr>
                <tr data-id="2">
                    <td>2</td>
                    <td>Celulares</td>
                    <td>Electrónica</td>
                    <td>Teléfonos móviles y accesorios</td>
                    <td>
                        <button class="btn btn-warning btn-sm toggle-estado btn-rounded" data-id="2" data-estado="Inactivo">
                            Inactivo
                        </button>
                    </td>
                    <td>
                        <div class="d-flex justify-content-center gap-2">
                            <button data-bs-toggle="modal" data-bs-target="#agregarCategoriaModal" class="btn btn-primary btn-rounded" title="Editar">
                                <i class="bi bi-pencil-square"></i>
                            </button>
                            <button class="btn btn-danger btn-rounded" title="Eliminar">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </td>
                </tr>
                <tr data-id="3">
                    <td>3</td>
                    <td>Computadoras</td>
                    <td>Electrónica</td>
                    <td>Laptops, PCs y periféricos</td>
                    <td>
                        <button class="btn btn-success btn-sm toggle-estado btn-rounded" data-id="3" data-estado="Activo">
                            Activo
                        </button>
                    </td>
                    <td>
                        <div class="d-flex justify-content-center gap-2">
                            <button data-bs-toggle="modal" data-bs-target="#agregarCategoriaModal"  class="btn btn-primary btn-rounded" title="Editar">
                                <i class="bi bi-pencil-square"></i>
                            </button>
                            <button class="btn btn-danger btn-rounded" title="Eliminar">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </td>
                </tr>
                <tr data-id="4">
                    <td>4</td>
                    <td>Ropa</td>
                    <td>Es categoría principal</td>
                    <td>Ropa para hombre, mujer y niños</td>
                    <td>
                        <button class="btn btn-warning btn-sm toggle-estado btn-rounded" data-id="4" data-estado="Inactivo">
                            Inactivo
                        </button>
                    </td>
                    <td>
                        <div class="d-flex justify-content-center gap-2">
                            <button data-bs-toggle="modal" data-bs-target="#agregarCategoriaModal" class="btn btn-primary btn-rounded" title="Editar">
                                <i class="bi bi-pencil-square"></i>
                            </button>
                            <button class="btn btn-danger btn-rounded" title="Eliminar">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>

    </div>



    <div class="modal fade" id="agregarCategoriaModal" tabindex="-1" aria-labelledby="agregarCategoriaModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header text-white">
                    <h5 class="modal-title" id="agregarCategoriaModalLabel">Agregar Nueva Categoría</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="formAgregarCategoria">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="nombreCategoria" class="form-label">Nombre de la Categoría</label>
                            <input type="text" class="form-control input-squarespace" id="nombreCategoria" placeholder="nombre">
                        </div>
                        <div class="mb-3">
                            <label for="descripcionCategoria" class="form-label">Descripción</label>
                            <textarea class="form-control input-squarespace" id="descripcionCategoria" rows="3" placeholder="escribe aqui tu descripcion...."></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="categoriaPadre" class="form-label">Categoría Padre</label>
                            <select class="form-select" id="categoriaPadre">
                                <option value="">Es una categoría principal</option>
                                <option value="">Tecnologia</option>
                                <option value="">Deporte</option>
                                <option value="">Celulares</option>
                                
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-warning" data-bs-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-success">Guardar Categoría</button>
                    </div>
                </form>
            </div>
        </div>
    </div>



</body>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#tablaCategorias').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
                },
                "columnDefs": [
                    {
                        "targets": 0,
                        "data": null,
                        "render": function (data, type, row, meta) {
                            return meta.row + 1;
                        }
                    }
                ]
            });


        });
    </script>
}
