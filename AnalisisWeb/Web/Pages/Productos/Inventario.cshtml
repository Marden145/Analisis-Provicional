                            <div class="col-md-4">
                                <label  class="form-label">Estado</label>
                                <input  class="form-control input-squarespace" />
                               
                            </div>

                           
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="container-fluid mt-5">

        <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
            <button class="btn btn-primary px-4 py-2 shadow-sm rounded-3"
                    data-bs-toggle="modal"
                    data-bs-target="#modalFormulario">
                Crear producto
            </button>

            <form class="d-flex align-items-center position-relative" style="max-width: 350px;">
                <input type="text"
                       class="form-control rounded-pill ps-4 pe-5"
                       placeholder="Buscar productos..."
                       aria-label="Buscar productos" />
                <button type="submit"
                        class="btn btn-primary position-absolute end-0 me-1 top-50 translate-middle-y rounded-pill px-3 shadow-sm"
                        aria-label="Buscar">
                    <i class="fas fa-search"></i>
                </button>
            </form>
        </div>
       


        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 mt-4">
            <div class="col">
                <div class="card h-100 shadow-sm rounded-4 overflow-hidden position-relative">
                    <img src="https://via.placeholder.com/300x200"
                         alt="Imagen de Producto 1"
                         class="card-img-top producto-img"
                         style="cursor:pointer;" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title mb-1 fw-semibold text-truncate" title="Producto 1">Producto 1</h5>
                        <p class="card-text fw-bold text-primary mb-1">$19.99</p>
                        <p class="text-muted mb-3 stock-info" data-stock="10">Stock: 10</p>
                        <div class="mt-auto d-flex justify-content-between gap-2">
                            <form method="post" class="d-inline">
                                <button type="submit" class="btn btn-outline-danger rounded-circle p-2 shadow-sm" title="Eliminar">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                            <button class="btn btn-outline-secondary rounded-circle p-2 shadow-sm" title="Editar" data-bs-toggle="modal" data-bs-target="#modalFormularioEditar">
                                <i class="bi bi-pencil"></i>
                            </button>
                        </div>
                    </div>
                
                    <div class="low-stock-indicator position-absolute top-0 end-0 m-2" title="Stock bajo">
                        <span class="badge bg-danger rounded-circle p-2 shadow">
                            <i class="bi bi-exclamation"></i>
                        </span>
                    </div>
                </div>
            </div>

            <div class="col">
