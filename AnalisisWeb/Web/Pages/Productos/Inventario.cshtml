@page
@model Web.Pages.Productos.InventarioModel
@{
}

<head>
    <link href="~/css/modales.css" rel="stylesheet" />
    <link href="~/css/inventario.css" rel="stylesheet" />
</head>


<body>
    <div class="modal fade" id="modalFormulario" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content" id="contenidoModal">
                <form id="formProducto" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title">Crear producto</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label  class="form-label">Nombre</label>
                                <input  class="form-control input-squarespace" placeholder="nombre del producto" />
                                
                            </div>
                            <div class="col-md-6">
                                <label  class="form-label">Marca</label>
                                <input class="form-control input-squarespace" placeholder="marca" />
                               
                            </div>

                            <div class="col-md-4">
                                <label  class="form-label">Precio</label>
                                <input type="number"  class="form-control input-squarespace " placeholder="precio" />
                                
                            </div>
                            <div class="col-md-8">
                                <label  class="form-label">Descripción</label>
                                <input  class="form-control input-squarespace" placeholder="descripcion" />
                               
                            </div>

                            <div class="col-md-4">
                                <label  class="form-label">Stock</label>
                                <input  class="form-control input-squarespace" placeholder="1" />
                                
                            </div>

                            <div class="col-md-4">
                                <label  class="form-label">Proveedor</label>
                                <select  class="form-select" >
                                    <option value="">Seleccione un proveedor</option>
                                </select>
                                
                            </div>

                            <div class="col-md-4">
                                <label  class="form-label">Categoría</label>
                                <input  class="form-control input-squarespace" value="E3B0C442-98FC-4D2F-A5D6-42FE3D3D7CB1" />
                                
                            </div>

                            <div class="col-md-4">
                                <label  class="form-label">Estado</label>
                                <input class="form-control input-squarespace" value="1" />
                                
                            </div>

                            <div class="col-md-8">
                                <label for="imagen" class="form-label">Imagen</label>
                                <input type="file" name="imagen" id="imagen" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modalFormularioEditar" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content" id="contenidoModalEditar">


                <form id="formProductoEditar" method="post" >
                    <div class="modal-header">
