<!-- Modal -->
<div id="detailsModal" class="modal">
  <div class="modal-content">
    <span class="close" onclick="closeModal()">&times;</span>
    <h2>Detalles del Pedido</h2>
    <div id="modalBody"></div>
  </div>
</div>

<script>
function toggleStatus(button) {
    const current = button.textContent.trim();
    if (current === "Shipped") {
        button.textContent = "Delivered";
        button.className = "status Delivered";
    } else if (current === "Delivered") {
        button.textContent = "Cancelled";
        button.className = "status Cancelled";
    } else {
        button.textContent = "Shipped";
        button.className = "status Shipped";
    }
}

function viewDetails(orderId) {
    let details = "";
    if (orderId === "#1001") {
        details = "<ul><li>Laptop Lenovo ThinkPad</li><li>Mouse Logitech MX Master 3</li></ul>";
    } else if (orderId === "#1002") {
        details = "<ul><li>Monitor Dell 24''</li><li>Teclado Mec√°nico Keychron K2</li></ul>";
    } else if (orderId === "#1003") {
        details = "<ul><li>Disco SSD Samsung 1TB</li><li>Base refrigerante para laptop</li></ul>";
    }
    document.getElementById("modalBody").innerHTML = "<p><b>Pedido:</b> " + orderId + "</p>" + details;
    document.getElementById("detailsModal").style.display = "block";
}

function closeModal() {
    document.getElementById("detailsModal").style.display = "none";
}

window.onclick = function(event) {
    if (event.target == document.getElementById("detailsModal")) {
        closeModal();
    }
}
</script>

