<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web.styles.css" asp-append-version="true" />
    


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm sticky-top">
            <div class="container justify-content-center">
                <a class="navbar-brand fw-bold mx-lg-3" href="#">MiEcommerce</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-center" id="mainNav">
                    <ul class="navbar-nav mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link active" asp-page="../Categorias/Categorias">Categorias</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="../Clientes/Clientes">Clientes</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="../Planilla/Planilla">Planilla</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="../Productos/Inventario">Inventario</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="../Cuenta/verCuenta">Ver mi perfil</a></li>
                    </ul>
                </div>
            </div>
        </nav>


        <nav class="navbar navbar-expand-lg category-navbar shadow-sm sticky-top category-bar">
            <div class="container">

                <div class="collapse navbar-collapse" id="categoryNav">
                    <ul class="navbar-nav flex-wrap">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="catTecnologia" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-laptop me-1 text-white"></i> Tecnología
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="catTecnologia">
                                <li><a class="dropdown-item " href="#">Laptops</a></li>
                                <li><a class="dropdown-item " href="#">Smartphones</a></li>
                                <li><a class="dropdown-item " href="#">Accesorios</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="catRopa" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-tshirt me-1 text-white"></i> Ropa
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="catRopa">
                                <li><a class="dropdown-item" href="#">Hombre</a></li>
                                <li><a class="dropdown-item" href="#">Mujer</a></li>
                                <li><a class="dropdown-item" href="#">Niños</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="catHogar" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-couch me-1 text-white"></i> Hogar
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="catHogar">
                                <li><a class="dropdown-item" href="#">Muebles</a></li>
                                <li><a class="dropdown-item" href="#">Decoración</a></li>
                                <li><a class="dropdown-item" href="#">Electrodomésticos</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="catDeportes" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-basketball-ball me-1 text-white"></i> Deportes
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="catDeportes">
                                <li><a class="dropdown-item" href="#">Fitness</a></li>
                                <li><a class="dropdown-item" href="#">Ciclismo</a></li>
                                <li><a class="dropdown-item" href="#">Natación</a></li>
                            </ul>
                        </li>
                    </ul>
                    <form class="d-flex me-3 search-form" role="search">
                        <input class="form-control me-2 search-input" type="search" placeholder="Buscar productos..." aria-label="Buscar productos" />
                        <button class="btn btn-outline-light search-btn" type="submit"><i class="fas fa-search"></i></button>
                    </form>
                    <a href="#" class="btn btn-primary rounded-circle"><i class="fas fa-shopping-cart text-white"></i></a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   
    @inject Microsoft.AspNetCore.Antiforgery.IAntiforgery antiforgery

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.js"></script>
    

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


