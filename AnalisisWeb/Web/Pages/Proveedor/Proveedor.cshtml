    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    
    <script>
        $(function () {
            $('#formAgregarProveedor').on('submit', function (e) {
                e.preventDefault();


                const nuevoProveedor = {
                    nombre: $('#nombreProveedor').val(),
                    correo: $('#correoProveedor').val(),
                    tipo: $('#tipoProveedor').val(),
                    direccion: $('#direccionProveedor').val(),
                    telefono: $('#telefonoProveedor').val(),
                    contacto: $('#nombreContacto').val(),
                    estado: $('#estadoProveedor').val()
                };

                console.log('Proveedor a guardar:', nuevoProveedor);


                const modalEl = document.getElementById('agregarProveedorModal');
                const modal = bootstrap.Modal.getInstance(modalEl);
                modal.hide();

                this.reset();
            });
        });
    </script>
